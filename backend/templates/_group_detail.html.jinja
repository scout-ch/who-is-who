<div class="grid-container">
{% if group.description and group.description[locale] %}
<h4>{{ group.description[locale] }}</h4>
{% endif %}
{% for role in roles %}
  <div class="card person-card {{ loop.cycle("first-column", "second-column") }}">
    {% if flat %}
      {% if role.person.id in images %}
        <img class="profile-picture" src=../img/{{ images[role.person.id] }} />
      {% else %}
        <img class="profile-picture" src=../img/logo.png />
      {% endif %}
    {% else %}
      {% if role.person.id in images %}
        <img class="profile-picture" src=/api/image/{{ role.person.id }} />
      {% else %}
        <img class="profile-picture" src=/api/static/favicon.png />
      {% endif %}
    {% endif %}
    <div class="card-text">
      <strong>{{ role.person.firstname | e }} {{ role.person.lastname | e }} / {{ role.person.nickname | e}} </strong>
      <br/>
      <i>{{ role.name[locale] | e }}</i>
      <br/>
      <br/>
      {% if role.tel %}
        Tel.: {{ role.tel | e }} 
      {% endif %}
      <br/>
      {% if role.email %}
        Email: {{ role.email | e }} 
      {% endif %}

    </div>
  </div>
{% endfor %}
</div>
