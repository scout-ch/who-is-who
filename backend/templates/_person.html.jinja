<div id="wiw-role-{{ person.role_id }}" class="wiw-person-container">
    <div class="wiw-person-image">
        {% if person.image %}
            <img class="wiw-profile-picture"
                 alt="profile picture of {{ person.person_name }}"
                 src="{{ person.image }}">
        {% else %}
            <img class="wiw-profile-picture" src="/api/static/favicon.png">
        {% endif %}
    </div>
    <p class="wiw-profile-text">
        <strong>{{ person.person_name }}</strong>
        <br>
        {{ person.role_name[locale] }}
    </p>
    <div class="wiw-person-attrs-container">
        <div class="wiw-person-attrs-col-1">
            <p class="wiw-person-attr">
                {% if person.role_emails %}Email:{% endif %}
                <br>
                {% if person.role_tel %}Tel.:{% endif %}
            </p>
        </div>
        <div class="wiw-person-attrs-col-2">
            <p class="wiw-person-attr">
                {% if person.role_emails %}{{ person.role_emails | replace('@', '(at)') }}{% endif %}
                <br>
                {% if person.role_tel %}{{ person.role_tel }}{% endif %}
            </p>
        </div>
    </div>
</div>
